{% extends 'base.html.twig' %}

{% block title %}Liste des produits - Gestion de Stock{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Liste des produits</h1>
        <a href="{{ path('product_new') }}" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Nouveau produit
        </a>
    </div>
    
    {% if error %}
        <div class="alert alert-danger">
            {{ error }}
        </div>
    {% else %}
        {# Filtres et recherche #}
        <div class="card mb-4">
            <div class="card-body">
                <form method="get" action="{{ path('product_index') }}" class="row g-3">
                    <div class="col-md-5">
                        <div class="input-group">
                            <input type="text" name="search" class="form-control" placeholder="Rechercher un produit..." value="{{ searchTerm }}">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-search"></i> Rechercher
                            </button>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <select name="category" class="form-select" onchange="this.form.submit()">
                            <option value="">Toutes les catégories</option>
                            {% for name, id in categories %}
                                <option value="{{ id }}" {% if selectedCategory == id %}selected{% endif %}>{{ name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-md-2">
                        <a href="{{ path('product_index') }}" class="btn btn-outline-secondary w-100">
                            <i class="bi bi-x-circle"></i> Réinitialiser
                        </a>
                    </div>
                    
                    {% if isPaginationActive %}
                    <div class="col-md-12 mt-3">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="input-group">
                                    <label class="input-group-text" for="pageSize">Éléments par page</label>
                                    <select name="size" id="pageSize" class="form-select">
                                        {% for option in [5, 10, 20, 50] %}
                                            <option value="{{ option }}" {% if pageSize is defined and pageSize == option %}selected{% endif %}>{{ option }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="input-group">
                                    <label class="input-group-text" for="sortOrder">Tri</label>
                                    <select name="sort" id="sortOrder" class="form-select">
                                        <option value="ASC" {% if sort is defined and sort == 'ASC' %}selected{% endif %}>Ascendant</option>
                                        <option value="DESC" {% if sort is defined and sort == 'DESC' %}selected{% endif %}>Descendant</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <button type="submit" class="btn btn-outline-primary w-100">Appliquer</button>
                            </div>
                        </div>
                    </div>
                    {% endif %}
                </form>
            </div>
        </div>
        
        {# Liste des produits #}
        {% if products is empty %}
            <div class="alert alert-info">
                Aucun produit trouvé.
            </div>
        {% else %}
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nom</th>
                            <th>SKU</th>
                            <th>Catégorie</th>
                            <th>Prix</th>
                            <th>Stock</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for product in products %}
                            <tr>
                                <td>{{ product.id }}</td>
                                <td>{{ product.name }}</td>
                                <td>{{ product.sku }}</td>
                                <td>{{ product.categoryName }}</td>
                                <td>{{ product.price|number_format(2, ',', ' ') }} €</td>
                                <td {% if product.isLowStock() %}class="low-stock"{% endif %}>{{ product.quantity }}</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="{{ path('product_show', {'id': product.id}) }}" class="btn btn-sm btn-info">
                                            <i class="bi bi-eye"></i> Voir
                                        </a>
                                        <a href="{{ path('product_edit', {'id': product.id}) }}" class="btn btn-sm btn-warning">
                                            <i class="bi bi-pencil"></i> Modifier
                                        </a>
                                        <a href="{{ path('product_stock', {'id': product.id}) }}" class="btn btn-sm btn-primary">
                                            <i class="bi bi-box"></i> Stock
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            
            {# Pagination #}
            {% if isPaginationActive %}
            <div class="d-flex justify-content-between align-items-center mt-4">
                <div>
                    <p class="mb-0">Page {{ currentPage + 1 }}</p>
                </div>
                <div>
                    <nav aria-label="Navigation des pages">
                        <ul class="pagination mb-0">
                            {% if currentPage is defined and currentPage > 0 %}
                            <li class="page-item">
                                <a class="page-link" href="{{ path('product_index', {
                                    'search': searchTerm, 
                                    'category': selectedCategory,
                                    'page': currentPage - 1, 
                                    'size': pageSize, 
                                    'sort': sort
                                }) }}">
                                    Précédent
                                </a>
                            </li>
                            {% else %}
                            <li class="page-item disabled">
                                <span class="page-link">Précédent</span>
                            </li>
                            {% endif %}
                            
                            <li class="page-item active">
                                <span class="page-link">{{ currentPage is defined ? currentPage + 1 : 1 }}</span>
                            </li>
                            
                            <li class="page-item">
                                <a class="page-link" href="{{ path('product_index', {
                                    'search': searchTerm, 
                                    'category': selectedCategory,
                                    'page': currentPage is defined ? currentPage + 1 : 1, 
                                    'size': pageSize, 
                                    'sort': sort
                                }) }}">
                                    Suivant
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
            {% endif %}
        {% endif %}
    {% endif %}
{% endblock %}