{% extends 'base.html.twig' %}

{% block title %}Modifier la catégorie - {{ category.name }}{% endblock %}

{% block body %}
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">Tableau de bord</a></li>
            <li class="breadcrumb-item"><a href="{{ path('category_index') }}">Catégories</a></li>
            <li class="breadcrumb-item"><a href="{{ path('category_show', {'id': category.id}) }}">{{ category.name }}</a></li>
            <li class="breadcrumb-item active" aria-current="page">Modifier</li>
        </ol>
    </nav>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Modifier la catégorie</h1>
        <div class="btn-group" role="group">
            <a href="{{ path('category_show', {'id': category.id}) }}" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Retour à la catégorie
            </a>
            <a href="{{ path('category_index') }}" class="btn btn-outline-secondary">
                <i class="bi bi-list"></i> Liste des catégories
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="card-title mb-0">Informations de la catégorie</h5>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_row(form.name) }}
                </div>
                <div class="mb-3">
                    {{ form_row(form.description) }}
                </div>
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="submit" class="btn btn-warning">
                        <i class="bi bi-check-circle"></i> Enregistrer
                    </button>
                    <a href="{{ path('category_show', {'id': category.id}) }}" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> Annuler
                    </a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}